<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    app:cardBackgroundColor="#F6E5D1"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/orderItemNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#846340"
                android:textSize="18sp"
                android:maxLines="1"
                android:textStyle="bold"
                tools:text="EM&amp;DI Coffee and Snacks" />

            <TextView
                android:id="@+id/orderItemPriceTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="#AF9479"
                android:textSize="14sp"
                tools:text="1 км от вас" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/orderItemMinusButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:tint="#846340"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_minus" />

            <TextView
                android:id="@+id/orderItemCountTextView"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="8dp"
                android:gravity="center"
                android:textColor="#846340"
                android:textSize="14sp"
                tools:text="2" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/orderItemPlusButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:tint="#846340"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_plus" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>